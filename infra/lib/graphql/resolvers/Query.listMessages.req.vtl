{
  "version": "2017-02-28",
  "operation": "Query",
  "query": {
    "expression": "channelId = :channelId",
    "expressionValues": {
      ":channelId": $util.dynamodb.toDynamoDBJson($ctx.args.channelId)
    }
  },
  "scanIndexForward": false,
  "limit": #if($ctx.args.limit) $ctx.args.limit #else 50 #end,
  #if($ctx.args.nextToken)
    "nextToken": "$ctx.args.nextToken"
  #end
}
